rule ldsc_trait_parse:
    input:
        logf=expand(config["KG_DIRECTORY"]+"ldsc_est_{{gwas}}_genome/est_{{snpset}}_{{dataset}}_{{bdf}}_{{hm}}_sim_{fgeneid}_{{scen}}_{{lds}}_{dointer}.log",fgeneid=FGENEID)
    output:
        logf=config["OUTPUT_DIR"]+"ldsc_res/sim_{snpset}_{dataset}_{bdf}_{hm}_{gwas}_ldsc_res_{scen}_{lds}_{dointer}.txt.gz"
    params:
        fgeneid=expand("{fgeneid}",fgeneid=FGENEID)
    script:
        "../scripts/parse_ldsc.R"                
                
        

rule get_ldsc:
    output:
        "ldsc/ldsc.py"
    shell:
        "git clone https://github.com/bulik/ldsc.git"
                      

