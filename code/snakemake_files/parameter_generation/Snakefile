import numpy as np
import gzip

def count_lines(fname):
    with gzip.open(fname) as fh:
        count = 0
        for _ in fh:
            count += 1
        return count


    

N=503
NREPS =15
PVE=list(5*10**np.linspace(-1,-2.5,num=5))
BIAS=list(np.linspace(0,0.1,num=3))
TOT_SIM=NREPS*len(PVE)*len(BIAS)
#TOT_SIM=1
FGENEID=range(1,TOT_SIM+1)

